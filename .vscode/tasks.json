{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pnpm: install",
      "type": "shell",
      "command": "pnpm",
      "args": ["install"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "pnpm: dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*(?:ERROR|error).*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "build:api",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter=api", "build"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "build:workers",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter=workers", "build"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "build:web",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter=web", "build"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: Start services",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Docker: Stop services",
      "type": "shell",
      "command": "docker-compose",
      "args": ["down"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Database: migrate",
      "type": "shell",
      "command": "pnpm",
      "args": ["db:migrate"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Database: seed",
      "type": "shell",
      "command": "pnpm",
      "args": ["db:seed"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Test: Run all",
      "type": "shell",
      "command": "pnpm",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Test: Watch",
      "type": "shell",
      "command": "pnpm",
      "args": ["test:watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Lint: Check",
      "type": "shell",
      "command": "pnpm",
      "args": ["lint"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Format: Fix all",
      "type": "shell",
      "command": "pnpm",
      "args": ["format"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Type Check",
      "type": "shell",
      "command": "pnpm",
      "args": ["type-check"],
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
